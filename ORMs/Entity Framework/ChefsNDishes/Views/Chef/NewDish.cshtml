@model Dish

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>New Chef</title>
    </head>
    <body>
        <h1>Add a Dish</h1>
        <a asp-controller="Chef" asp-action="Dishes">Home</a>
        <form asp-controller="Chef" asp-action="CreateDish" method="POST">
            <div>
                <label asp-for="Name"></label>
                <span asp-validation-for="Name"></span>
                <input asp-for="Name">
            </div>
            <div>
                <label asp-for="Calories"></label>
                <span asp-validation-for="Calories"></span>
                <input asp-for="Calories">
            </div>
            <div>
                <label asp-for="Description"></label>
                <span asp-validation-for="Description"></span>
                <textarea asp-for="Description" rows="4" cols="40"></textarea> 
            </div>
            <div>
                <label asp-for="ChefId"></label>
                <select asp-for="ChefId">
                    @foreach (Chef c in ViewBag.cheflist)
                    {
                        <option value="@c.ChefId">@c.FullName()</option>
                    }
                </select>
            </div>
            <div>
                <label asp-for="Tastiness"></label>
                <span asp-validation-for="Tastiness"></span>
                <select asp-for="Tastiness" >
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <button type="submit">Add Dish</button>
        </form>
    </body>
</html>