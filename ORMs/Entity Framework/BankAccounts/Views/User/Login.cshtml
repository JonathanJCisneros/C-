@model LoginUser

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Log In</title>
    </head>
    <body>
        <h1>Login</h1>
        <form asp-controller="User" asp-action="LoggedIn" method="POST">
            <div>
                <label asp-for="LoginEmail"></label>
                <span asp-validation-for="LoginEmail"></span>
                <input asp-for="LoginEmail">
            </div>
            <div>
                <label asp-for="LoginPassword"></label>
                <span asp-validation-for="LoginPassword"></span>
                <input asp-for="LoginPassword">
            </div>
            <button type="submit">Log In</button>
        </form>
        <a asp-controller="User" asp-action="Registration" >Need to Register?</a>
    </body>
</html>