@model UserLogin

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>
        <form asp-controller="User" asp-action="Login" method="POST">
            <h1>Login</h1>
            <div>
                <label asp-for="LoginEmail" class="form-label"></label>
                <span asp-validation-for="LoginEmail" style="color: red; font-weight: bold;"></span>
                <input asp-for="LoginEmail" class="form-control">
            </div>
            <div>
                <label asp-for="LoginPassword" class="form-label"></label>
                <span asp-validation-for="LoginPassword" style="color: red; font-weight: bold;"></span>
                <input asp-for="LoginPassword" class="form-control">
            </div>
            <br>
            <button type="submit" class="btn btn-outline-primary">Log In</button>
        </form>
    </body>
</html>