@model User
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Register</title>
    </head>
    <body>
        <form action="/register" method="post">
            <div>
                <span asp-validation-for="Name"></span>
                <br>
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name">
            </div>
            <div>
                <span asp-validation-for="Location"></span>
                <br>
                <label asp-for="Location">Location</label>
                <select asp-for="Location" >
                    <option value="Seattle">Seattle</option>
                    <option value="Bellevue">Bellevue</option>
                    <option value="San Diego">San Diego</option>
                    <option value="New York">New York</option>
                    <option value="Online">Online</option>
                </select>
            </div>
            <div>
                <span asp-validation-for="FaveLang"></span>
                <br>
                <label asp-for="FaveLang"></label>
                <select asp-for="FaveLang">
                    <option value="Python">Python</option>
                    <option value="C#">C#</option>
                    <option value="MERN">MERN</option>
                    <option value="Java">Java</option>
                </select>
            </div>
            <div>
                <span asp-validation-for="Comment"></span>
                <label asp-for="Comment">Comment</label>
                <br>
                <textarea asp-for="Comment"cols="30" rows="10"></textarea>
            </div>
            <button type="submit">Submit</button>
        </form>
    </body>
</html>