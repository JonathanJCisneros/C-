<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Razor Fun</title>
    </head>
    <body>
        <h1>Here are some delicious foods!</h1>

        @{

            string[] test = {"Apple Pie", "Burritos", "Clams Casino", "Donuts"};

            foreach (string food in test)
            {
                if(food.StartsWith("C"))
                {
                    <p style="color : red">@food</p>
                }
                else
                {
                    <p>@food</p>
                }
                
            }

        }

    </body>
</html>